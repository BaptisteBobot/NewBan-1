<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!--  Servlet-->
  <servlet>
    <servlet-name>ListCustomersServlet</servlet-name>
    <servlet-class>Servlet.ListCustomersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InscriptionCustomerServlet</servlet-name>
    <servlet-class>Servlet.InscriptionCustomerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>Servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MailServlet</servlet-name>
    <servlet-class>Servlet.MailServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeconnexionServlet</servlet-name>
    <servlet-class>Servlet.DeconnexionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InscriptionAdvisorServlet</servlet-name>
    <servlet-class>Servlet.InscriptionAdvisorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProfilServlet</servlet-name>
    <servlet-class>Servlet.ProfilServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EditCustomerServlet</servlet-name>
    <servlet-class>Servlet.EditCustomerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductNoteServlet</servlet-name>
    <servlet-class>Servlet.ProductNoteServlet</servlet-class>
  </servlet>


  <!--  Servlet Mapping-->
  <servlet-mapping>
    <servlet-name>ListCustomersServlet</servlet-name>
    <url-pattern>/customers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InscriptionCustomerServlet</servlet-name>
    <url-pattern>/inscription</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MailServlet</servlet-name>
    <url-pattern>/mail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeconnexionServlet</servlet-name>
    <url-pattern>/deconnexion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InscriptionAdvisorServlet</servlet-name>
    <url-pattern>/advisor</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProfilServlet</servlet-name>
    <url-pattern>/profil</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EditCustomerServlet</servlet-name>
    <url-pattern>/edit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductsServlet</servlet-name>
    <url-pattern>/addproducts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductNoteServlet</servlet-name>
    <url-pattern>/note</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
  </welcome-file-list>

</web-app>
